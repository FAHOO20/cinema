<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head", { pageTitle: "Home" }) %>
</head>
<body>
  <%- include("partials/header") %>

  <!-- Hero Section -->
  <section class="hero bg-dark text-white text-center py-5">
    <div class="container">
      <h1>ðŸŽ¬ Welcome to Cinema Booking</h1>
      <p class="lead">Book your favorite movies easily and enjoy the best cinema experience.</p>
      <a href="/movies" class="btn btn-primary btn-lg">Browse Movies</a>
    </div>
  </section>

  <!-- Featured Movies -->
  <section class="container my-5">
    <h2 class="text-center">ðŸŽ¥ Featured Movies</h2>
    <div class="row mt-4">
      <% if (movies && movies.length) { %>
        <% movies.slice(0, 4).forEach((movie) => { %>
          <div class="col-md-3">
            <div class="card">
              <img src="<%= movie.posterUrl %>" class="card-img-top" alt="<%= movie.title %>">
              <div class="card-body text-center">
                <h5 class="card-title"><%= movie.title %></h5>
                <a href="/movies/<%= movie._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No movies available.</p>
      <% } %>
    </div>
  </section>

  <%- include("partials/footer") %>
</body>
</html>
