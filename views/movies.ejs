<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head", { pageTitle: "All Movies" }) %>
</head>
<body>
  <%- include("partials/header") %>

  <main class="container mt-5">
    <h1 class="text-center">ðŸŽ¬ Now Showing</h1>
    <div class="row mt-4">
      <% if (movies && movies.length) { %>
        <% movies.forEach((movie) => { %>
          <div class="col-md-3">
            <div class="card">
              <img src="<%= movie.posterUrl %>" class="card-img-top" alt="<%= movie.title %>">
              <div class="card-body text-center">
                <h5 class="card-title"><%= movie.title %></h5>
                <a href="/movies/<%= movie._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No movies available.</p>
      <% } %>
    </div>
  </main>

  <%- include("partials/footer") %>
</body>
</html>
