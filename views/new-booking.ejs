<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head", { pageTitle: "Book a Ticket" }) %>
</head>
<body>
  <%- include("partials/header") %>
  <main class="container mt-5">
    <h1 class="text-center">New Booking</h1>

    <div class="card p-4 shadow">
      <form action="/web/booking" method="POST">
        <input type="hidden" name="movie" value="<%= selectedMovieId %>">
        <input type="hidden" name="user" value="<%= loggedInUserId %>">

        <div class="mb-3">
          <label class="form-label">Date:</label>
          <input type="date" class="form-control" name="date" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Seat Number:</label>
          <input type="number" class="form-control" name="seatNumber" required min="1">
        </div>

        <button type="submit" class="btn btn-primary w-100">Confirm Booking</button>
      </form>
    </div>
  </main>
  <%- include("partials/footer") %>
</body>
</html>
